<div class="loginform">
  <form action="/signup" method="POST" id="form-container">
    <div class="fields">
      <label for="username">Gebruikersnaam:</label>
      <input id="username" type="text" name="username" placeholder="Je gebruikersnaam">
      <label for="password">Wachtwoord:</label>
      <input id="password" type="password" name="password" placeholder="Je wachtwoord">
    </div>
    {{#if message}}
      <div class="error-message">{{ message }}</div>
    {{/if}}

    <button class="submitbutton" type="submit" value="Inloggen">Schrijf me in</button>

