{{#if user}}
  <div class="page" style="background:rgba(255,255,255,0.8)">
    {{!-- <div id="greeting"><h1>Hallo {{user.username}}</h1></div> --}}
    {{!-- <div><a href="/spelen">Ik wil spelen</a></div>
    <div><a href="/profiel">Profiel bewerken</a></div>
    <div><a href='/afmelden'>Afmelden</a></div> --}}
    {{!-- <div>{{user.username}}</div> --}}
    <div id="score-table">
      {{#if gamesPlayed.length}}
        {{!-- <h2>Spelresultaten</h2> --}}
        <table style="width:100%">
          <thead>
            <tr>
              <th></th>
              <th></th>
              <th></th>
              <th style="text-align:left" colspan="4">Jij</th>
              <th style="text-align:left" colspan="4">Speler 2</th>
              <th style="text-align:left" colspan="4">Speler 3</th>
              <th style="text-align:left" colspan="4">Speler 4</th>
            </tr>
            <tr>
              <th style="text-align:left">Naam</th>
              <th style="text-align:left">Datum</th>
              <th style="text-align:left">Spel</th>
              <th style="text-align:left">Naam</th>
              <th style="text-align:left">Slagen</th>
              <th style="text-align:left">Score</th>
              <th style="text-align:left">Total</th>
              <th style="text-align:left">Naam</th>
              <th style="text-align:left">Slagen</th>
              <th style="text-align:left">Score</th>
              <th style="text-align:left">Total</th>
              <th style="text-align:left">Naam</th>
              <th style="text-align:left">Slagen</th>
              <th style="text-align:left">Score</th>
              <th style="text-align:left">Total</th>
              <th style="text-align:left">Naam</th>
              <th style="text-align:left">Slagen</th>
              <th style="text-align:left">Score</th>
              <th style="text-align:left">Total</th>
            </tr>
          </thead>
          <tbody>
            {{#each gamesPlayed}}
              {{#with this}}
                <tr>
                  <td style="text-align:left">{{name}}</td>
                  <td style="text-align:left">{{getTimestamp created_at}}</td>
                  <td style="text-align:left">{{getBidName bid}}</td>
                  <td style="text-align:left">{{scores.0.player_name}}</td>
                  <td style="text-align:left">{{scores.0.tricks_won}}</td>
                  <td style="text-align:left">{{scores.0.score}}</td>
                  <td style="text-align:left">{{scores.0.total_score}}</td>
                  <td style="text-align:left">{{scores.1.player_name}}</td>
                  <td style="text-align:left">{{scores.1.tricks_won}}</td>
                  <td style="text-align:left">{{scores.1.score}}</td>
                  <td style="text-align:left">{{scores.0.total_score}}</td>
                  <td style="text-align:left">{{scores.2.player_name}}</td>
                  <td style="text-align:left">{{scores.2.tricks_won}}</td>
                  <td style="text-align:left">{{scores.2.score}}</td>
                  <td style="text-align:left">{{scores.0.total_score}}</td>
                  <td style="text-align:left">{{scores.3.player_name}}</td>
                  <td style="text-align:left">{{scores.3.tricks_won}}</td>
                  <td style="text-align:left">{{scores.3.score}}</td>
                  <td style="text-align:left">{{scores.0.total_score}}</td>
                </tr>
              {{/with}}
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <h2>Je spelresultaten komen hier te staan!</h2>
      {{/if}}
    </div>
  </div>
{{else}}
  <div>Je mag hier alleen komen als je je aangemeld hebt!</div>
{{/if}}

